<%= form_for @prop do |f| %>

  <% if @prop.errors.any? %>
    <div class="error_explanation">
      <h2>
        <%= pluralize(@prop.errors.count, "error")  %>
prohibited this prop from being saved:
      </h2>
      <ul>
        <% @prop.errors.full_messages.each do |msg|  %>
        <li><%= msg  %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>


  <%= f.radio_button(:choice, "A") %>
  <%= f.label(:choice, "The Correct Answer is A") %></br >
  <%= f.radio_button(:choice, "B") %>
  <%= f.label(:choice, "The Correct Answer is B") %></br >
  <%= f.radio_button(:choice, "C") %>
  <%= f.label(:choice, "The Answer Has Yet To Be Determined") %>
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.hidden_field :prop_id, :value => @prop.id %>


  <p>
     <button class="btn btn-positive btn-block btn-outlined"><%= f.submit %></button>

  </p>
<% end %>
